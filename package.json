{
  "name": "sentechain-miniapp",
  "version": "1.0.0",
  "description": "Web3 Mini-App for sending, receiving, and saving USDT on Stellar",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "build:soroban": "node stellar_deploy/build-contracts.js",
    "deploy:stellar": "node stellar_deploy/deploy.js",
    "deploy": "node stellar_deploy/deploy.js",
    "test": "npx hardhat test"
  },
  "keywords": [
    "web3",
    "stellar",
    "soroban",
    "stablecoin",
    "defi"
  ],
  "author": "SenteChain Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "concurrently": "^8.2.2",
    "hardhat": "^2.19.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "@stellar/stellar-sdk": "^14.5.0",
    "dotenv": "^16.3.1",
    "stellar-base": "^13.1.0"
  }
}